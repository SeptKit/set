{
	"name": "@septkit/sclsdk",
	"version": "0.0.1",
	"type": "module",
	"description": "SDK for SCL",
	"source": "src/index.ts",
	"scripts": {
		"//====== BUILD ======//": "",
		"build": "run-p type-check \"build-only {@}\" --",
