			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"devDependencies": {
		"@tsconfig/node22": "^22.0.2",
		"@types/node": "^22.15.32",
		"@vitest/browser": "^3.2.4",
		"jiti": "^2.4.2",
		"oxlint": "~1.6.0",
		"npm-run-all2": "^8.0.4",
		"playwright": "^1.53.2",
		"prettier": "3.5.3",
		"typescript": "~5.8.0",
		"vite": "^7.0.0",
		"vitest": "^3.2.4",
		"vitest-browser-vue": "^1.0.0"
	}
