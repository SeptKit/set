{
	"extends": "@tsconfig/node22/tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"outDir": "dist",
		"rootDir": "src",
		"module": "ESNext",
		"target": "ES2019",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": false,
		"lib": ["ESNext", "DOM"]
	},
	"include": ["src"],
	"exclude": ["**/*.test.ts", "**/__tests__/**"]
}
