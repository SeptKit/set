{
	"name": "@septkit/shell",
	"version": "1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "run-p type-check \"build-only {@}\" --",
		"preview": "vite preview",
		"test": "vitest --project unit",
		"test:watch": "npm run test -- --watch",
		"test:e2e": "vitest --project e2e",
		"build-only": "vite build",
		"type-check": "vue-tsc --build",
		"lint": "oxlint . --fix -D correctness --ignore-path .gitignore",
		"format": "prettier --write src/ e2e/",
		"format:check": "prettier --check src/ e2e/",
		"install:browser": "pnpm exec playwright install chromium",
		"link:ui": "rm -rf ./node_modules/@septkit/ui && ln -s ../../../ui ./node_modules/@septkit/ui",
		"link:ui:restore": "rm -rf ./node_modules/@septkit/ui && pnpm install"
	},
	"dependencies": {
		"@septkit/ui": "0.0.1",
		"@tailwindcss/vite": "^4.1.11",
		"pinia": "^3.0.3",
		"tailwindcss": "^4.1.11",
		"vite-plugin-static-copy": "^3.1.1",
		"vitest-browser-vue": "^1.0.0",
		"vue": "^3.5.17"
	},
	"devDependencies": {
		"@testing-library/vue": "^8.1.0",
		"@tsconfig/node22": "^22.0.2",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^22.15.32",
		"@vitejs/plugin-vue": "^6.0.0",
		"@vitest/browser": "^3.2.4",
		"@vue/test-utils": "^2.4.6",
		"@vue/tsconfig": "^0.7.0",
		"daisyui": "^5.0.46",
		"jiti": "^2.4.2",
		"npm-run-all2": "^8.0.4",
		"oxlint": "~1.6.0",
		"playwright": "^1.53.2",
		"prettier": "3.5.3",
		"typescript": "~5.8.0",
		"vite": "^7.0.0",
		"vite-plugin-static-copy": "^3.1.1",
		"vite-plugin-vue-devtools": "^7.7.7",
		"vitest": "^3.2.4",
		"vue-tsc": "^2.2.10"
	}
}
