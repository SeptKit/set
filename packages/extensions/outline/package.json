{
	"name": "@septkit/outline",
	"version": "1",
	"description": "Shows the outline of the active file",
	"private": true,
	"type": "module",
	"contributes": {
		"primarySidebars": [
			{
				"id": "sprinteins.ext-outline.outline-sidebar",
				"displayName": "Outline",
				"icon": "/assets/icon.svg",
				"entryPoint": "/sidebar-primary.js"
			}
		]
	},
	"scripts": {
		"dev": "vite",
		"build": "run-p type-check \"build-only {@}\" --",
		"build:watch": "npm run build -- --watch",
		"build:serve": "concurrently \"npm run preview\" \"npm run build:watch\"",
		"preview": "vite preview --port 55608",
		"test": "vitest --project unit",
		"test:watch": "pnpm test --watch",
		"build-only": "vite build",
		"type-check": "vue-tsc --build",
		"lint": "oxlint . --fix -D correctness --ignore-path .gitignore",
		"format": "prettier --write src/",
		"format:check": "prettier --check src/",
		"install:browser": "pnpm exec playwright install chromium"
	},
	"dependencies": {
		"@septkit/ui": "catalog:",
		"@septkit/fileio": "catalog:",
		"@tailwindcss/vite": "^4.1.11",
		"pinia": "^3.0.3",
		"tailwindcss": "^4.1.11",
		"vite-plugin-css-injected-by-js": "^3.5.2",
		"vite-plugin-static-copy": "^3.1.1",
		"vitest-browser-vue": "^1.0.0",
		"vue": "^3.5.17"
	},
	"devDependencies": {
		"@testing-library/vue": "^8.1.0",
		"@tsconfig/node22": "^22.0.2",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^22.15.32",
		"@vitejs/plugin-vue": "^6.0.0",
		"@vitest/browser": "^3.2.4",
		"@vue/test-utils": "^2.4.6",
		"@vue/tsconfig": "^0.7.0",
		"concurrently": "^9.2.0",
		"daisyui": "^5.0.46",
		"jiti": "^2.4.2",
		"npm-run-all2": "^8.0.4",
		"oxlint": "~1.6.0",
		"playwright": "^1.53.2",
		"prettier": "3.5.3",
		"typescript": "~5.8.0",
		"vite": "^7.0.0",
		"vite-plugin-vue-devtools": "^7.7.7",
		"vitest": "^3.2.4",
		"vue-tsc": "^2.2.10"
	}
}
