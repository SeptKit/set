{
	"name": "Dataflow Extension",
	"version": "3",
	"description": "extension for SET Platform that provides dataflow capabilities between Logic-Nodes",
	"private": true,
	"type": "module",
	"contributes": {
		"customEditors": [
			{
				"id": "sprinteins.dataflow_extension.dataflow",
				"displayName": "Dataflow Extension",
				"icon": "/assets/icon.svg",
				"fileSelectors": [
					"SSD",
					"ASD",
					"SCD"
				],
				"entryPoint": "/shell.js"
			}
		]
	},
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"build:watch": "npm run build -- --watch",
		"build:serve": "concurrently \"npm run preview\" \"npm run build:watch\"",
		"preview": "vite preview --port 54947",
		"test": "vitest --project unit",
		"test:watch": "pnpm test --watch",
		"build-only": "vite build",
		"type-check": "vue-tsc --build",
		"lint": "oxlint . --fix -D correctness --ignore-path .gitignore",
		"format": "prettier --write src/",
		"format:check": "prettier --check src/",
		"install:browser": "pnpm exec playwright install chromium",
		"link:ui": "rm -rf ./node_modules/@septkit/ui && ln -s ../../../../ui ./node_modules/@septkit/ui",
		"link:ui:restore": "rm -rf ./node_modules/@septkit/ui && pnpm install",
		"link:fileio": "rm -rf ./node_modules/@septkit/fileio && ln -s ../../../../fileio ./node_modules/@septkit/fileio",
		"link:fileio:restore": "rm -rf ./node_modules/@septkit/fileio && pnpm install",
		"link:restore": "rm -rf ./node_modules/@septkit && pnpm install"
	},
	"dependencies": {
		"@septkit/fileio": "catalog:",
		"@septkit/ui": "catalog:",
		"@tailwindcss/vite": "^4.1.11",
		"@vueuse/core": "^13.5.0",
		"daisyui": "^5.0.46",
		"dexie": "catalog:",
		"pinia": "^3.0.3",
		"tailwindcss": "^4.1.12",
		"vite-plugin-css-injected-by-js": "^3.5.2",
		"vite-plugin-static-copy": "^3.1.1",
		"vitest-browser-vue": "^1.0.0",
		"vue": "^3.5.17"
	},
	"devDependencies": {
		"@testing-library/vue": "^8.1.0",
		"@tsconfig/node22": "^22.0.2",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^22.15.32",
		"@vitejs/plugin-vue": "^6.0.0",
		"@vitest/browser": "^3.2.4",
		"@vue/test-utils": "^2.4.6",
		"@vue/tsconfig": "^0.7.0",
		"concurrently": "^9.2.0",
		"jiti": "^2.4.2",
		"npm-run-all2": "^8.0.4",
		"oxlint": "~1.6.0",
		"playwright": "^1.53.2",
		"prettier": "3.5.3",
		"typescript": "~5.8.0",
		"vite": "^7.0.0",
		"vite-plugin-vue-devtools": "^7.7.7",
		"vitest": "^3.2.4",
		"vue-tsc": "^2.2.10"
	}
}
